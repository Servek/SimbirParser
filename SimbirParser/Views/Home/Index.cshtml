@model SimbirParser.ViewModels.StatsViewModel
@{
    ViewData["Title"] = "Parser";
}

<div>
    <form asp-action="Index">
        <div class="form-group">
            <label asp-for="Url" class="control-label"></label>
            <input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Explore</button>
        </div>
    </form>
</div>
<div class="row">
    @if (Model.UniqueWordsCount is {Count: > 0 })
    {
        foreach (var (key, value) in Model.UniqueWordsCount)
        {
            <p class="col-md-4 col-lg-3"><b>@key</b> - @value</p>
        }
    }
</div>
